{
  "manifest_version": 2,
  "name": "GhostHunter",
  "version": "1.0",
  "description": "Track and log domain requests for a specific tab.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/GhostHunter16x16.png",
      "48": "icons/GhostHunter48x48.png",
      "128": "icons/GhostHunter128x128.png"
    }
  },
  "icons": {
    "16": "icons/GhostHunter16x16.png",
    "48": "icons/GhostHunter48x48.png",
    "128": "icons/GhostHunter128x128.png"
  }
}
